<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/top_news_item_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/stephan"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/top_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:fontFamily="sans-serif-bold"
        android:textStyle="bold"
        android:textColor="#de000000"
        android:lineSpacingExtra="9sp"
        tools:text="Obituary: Stephen Hawking"
        />
    <TextView
        android:id="@+id/top_news_item_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#673ab7"
        tools:text="Bbc.com"/>
    <TextView
        android:id="@+id/top_news_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#de777777"
        android:lineSpacingExtra="7sp"
        tools:text="2 hours ago"
        />
</LinearLayout>